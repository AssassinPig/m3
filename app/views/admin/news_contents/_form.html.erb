<%= form_for @news_content, url: @news_content.new_record? ? admin_news_contents_path : admin_news_content_path(@news_content), html: {class: "form-horizontal", role:"form", :multipart => true} do |f| %>
    <%= render 'shared/error_messages', target: @news_content %>

    <div class="form-group">
        <div class="field">
            <%= f.label :title %><br>
            <%= f.text_field :title, placeholder: "输入标题", class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <div class="field">
            <%= f.label :summary%><br>
            <%= f.text_field :summary, placeholder: "输入简介", class: "form-control" %>
        </div>
    </div>

    <hr>
    <div class="form_group">
        <div class="field">
            <%= f.file_field :news_pic_url%>
        </div>
    </div>

    <div class="form_group">
        <h4>当前图片</h4>
        <%= image_tag(@news_content.news_pic_url) if !@news_content.news_pic_url.nil? %>
    </div>

    <hr>
    <div class="form-group">
        <div class="field">
            <%= f.label :content %><br>
            <%= f.kindeditor :content %>
        </div>
    </div>
    <div class="actions">
        <%= f.submit '保存', class: "btn btn-default"%>
    </div>
<% end %>
