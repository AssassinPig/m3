<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <h1><%= @work_content.title %></h1>
        
        <hr>
        <p>
        <%= image_tag(@work_content.work_logo_url) if !@work_content.work_logo_url.nil? %>
        </p>

        <hr>
        <p>
        <%= image_tag(@work_content.work_pic_url) if !@work_content.work_pic_url.nil? %>
        </p>

        <hr>
        <p>
        <%= raw @work_content.content %>
        </p>
        <hr>

        <%= link_to '编辑', edit_admin_work_content_path(@work_content), 'data-no-turbolink' => true %>
        <%= link_to '后退', admin_work_contents_path %>
    </div>
</div>
