<%= form_for @job, url: @job.new_record? ? admin_jobs_path : admin_job_path(@job), html: {class: "form-horizontal", role: "form"} do |f| %>
    <%= render 'shared/error_messages', target: @job%>

    <div class="form-group">
        <div class="field">
            <%= f.label :title %><br>
            <%= f.text_field :title, placeholder:"输入职位title", class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <div class="field">
            <%= f.label :content %><br>
            <%= f.kindeditor :content %>
        </div>
    </div>

    <div class="form-group">
        <div class="actions">
        <%= f.submit '保存', class: "btn btn-primary" %>
        </div>
    </div>
<% end %>
